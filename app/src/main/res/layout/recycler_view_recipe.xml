<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/materialCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="@dimen/cv_corner_radius"
    app:cardElevation="@dimen/cv_elevation"
    app:contentPaddingBottom="@dimen/cv_padding_bottom"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/cv_list_item_margin_top"
            android:layout_marginLeft="@dimen/cv_list_item_margin_left"
            android:backgroundTint="@color/deep_green"
            android:padding="@dimen/tag_padding"
            android:text="@string/all_items_in_fridge"
            android:textColor="@color/white"
            android:textSize="@dimen/tag_font_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_thumbnail"
            tools:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_video_title"
            style="@style/SpoqaNotoNeoBoldTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:textSize="@dimen/list_item_title_font_size"
            app:layout_constraintStart_toStartOf="@id/tv_tag"
            app:layout_constraintTop_toBottomOf="@id/tv_tag"
            tools:text="소세지 야채 볶음" />

        <ImageView
            android:id="@+id/iv_carrot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/ic_carrot_icon"
            app:layout_constraintStart_toStartOf="@+id/tv_video_title"
            app:layout_constraintTop_toBottomOf="@id/tv_video_title" />

        <TextView
            android:id="@+id/tv_inFridge"
            style="@style/SpoqaNotoNeoBoldTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/items_in_fridge"
            android:textColor="@color/deep_green"
            app:layout_constraintStart_toEndOf="@+id/iv_carrot"
            app:layout_constraintTop_toTopOf="@+id/iv_carrot" />

        <TextView
            android:id="@+id/tv_item_in_fridge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/items_margin_left"
            app:layout_constraintEnd_toEndOf="@+id/btn_add_library"
            app:layout_constraintStart_toEndOf="@+id/tv_inFridge"
            app:layout_constraintTop_toTopOf="@+id/iv_carrot"
            tools:text="감자, 고구마, 소세지" />

        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/not_in_fridge_padding_top"
            android:src="@drawable/ic_shopping_cart_black_24dp"
            app:layout_constraintStart_toStartOf="@+id/iv_carrot"
            app:layout_constraintTop_toBottomOf="@+id/iv_carrot" />

        <TextView
            android:id="@+id/tv_not_inFridge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/items_not_in_fridge"
            android:textColor="@color/deep_green"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_cart"
            app:layout_constraintTop_toTopOf="@+id/iv_cart" />

        <TextView
            android:id="@+id/tv_item_not_in_fridge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/tv_item_in_fridge"
            app:layout_constraintStart_toStartOf="@+id/tv_item_in_fridge"
            app:layout_constraintTop_toTopOf="@+id/iv_cart"
            tools:text="김, 미역" />

        <Button
            android:id="@+id/btn_add_library"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:text="@string/to_library"
            app:icon="@drawable/ic_baseline_video_library_24_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_thumbnail" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
