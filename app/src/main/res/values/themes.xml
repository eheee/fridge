<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FridgeTube" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/new_light_orange</item>
        <item name="colorPrimaryVariant">@color/new_light_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/new_light_orange</item>
        <item name="colorSecondaryVariant">@color/new_light_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/SpoqaNotoNeoTextViewStyle</item>
        <item name="android:buttonStyle">@style/SpoqaNotoNeoButtonStyle</item>
    </style>

    <style name="SpoqaNotoNeoTextViewStyle" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/default_font_size</item>
        <item name="android:fontFamily">@font/spoqa_ha_sans_neo_bold_family</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/spoqa_ha_sans_neo_regular_family</item> <!--Support library under 26 -->
    </style>

    <style name="SpoqaNotoNeoButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/default_font_size</item>
        <item name="android:fontFamily">@font/spoqa_ha_sans_neo_regular_family</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/spoqa_ha_sans_neo_regular_family</item>
    </style>

    <style name="SpoqaNotoNeoBoldTextViewStyle" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/default_font_size</item>
        <item name="android:fontFamily">@font/spoqa_ha_sans_neo_bold_family</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/spoqa_ha_sans_neo_bold_family</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>
</resources>